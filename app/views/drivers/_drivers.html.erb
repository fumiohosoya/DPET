<% if drivers.any? %>
 <table class="table table-striped table-bordered bg-red">
     <% drivers.each do |driver| %>
      <tr>
         <td class="w-10 text-center">
             <%= driver.id %>:
         </td>
         <td class="w-40 pl-4">
             <%= driver.name %>
         </td>
         <td>
   
             <%= link_to 'View profile', driver_path(driver), class:"btn btn-primary" %>
         </td>
     </tr>
      <% end %>
     
 </table>
 <%= paginate drivers %>
<% end %>
