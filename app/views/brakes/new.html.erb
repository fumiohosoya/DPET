<h3><%= thai_trans("Brake & Side Brake") %> Check</h3>

   <%= form_with(model: @brake, local:true, multipart: true,
           class: "form-horizontal") do |f|  %>
     <%= render 'layouts/error_messages', model: f.object %>
      <%= f.hidden_field :driver_id, value: @current_driver.id %>
      <div class="col-4">

         <%= f.fields_for :checkimages do |q| %>
            <% if f.object.checkimages.first.image.present? %>
              <%= image_tag f.object.checkimages.first.image.url(:thumb) %>
              <%= q.hidden_field :image_cache %>
            <% else %>
                <%= q.file_field :image, accept:'image/*', capture:'environment' %>
            <% end %>
          <% end %>
      </div>
      <div class="col-4">
          <%= image_tag '/images/GuidanceBrake2.png', alt: 'GuidanceBrake2', class: 'img-fluid' %>
          <%= f.fields_for :checkimages do |q| %>
            <% if f.object.checkimages.second&.image.present? %>
              <%= image_tag f.object.checkimages.first.image.url(:thumb) %>
              <%= q.hidden_field :image_cache %>
            <% else %>
                <%= q.file_field :image, accept:'image/*', capture:'environment' %>
            <% end %>
          <% end %>
      </div>

      <div class="col-4">
          <%= image_tag '/images/GuidanceBrake3.png', alt: 'GuidanceBrake3', class: 'img-fluid' %>
          <%= f.fields_for :checkimages do |q| %>
            <% if f.object.checkimages.third&.image.present? %>
              <%= image_tag f.object.checkimages.first.image.url(:thumb) %>
              <%= q.hidden_field :image_cache %>
            <% else %>
                <%= q.file_field :image, accept:'image/*', capture:'environment' %>
            <% end %>
          <% end %>
      <div class="form-group row">
          <%= f.submit thai_trans("Send Photo"), class:"btn btn-xs btn-danger" %>
      </div>
    <% end %>