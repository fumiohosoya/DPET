<h3><%= thai_trans( "Grease Up") %> Check</h3>

   <div class="row mb-4">
       
       <div class="col-4">
         <%= image_tag '/images/GuidanceGreaseup1.png', alt: 'GuidanceGreaseup1', class: 'img-fluid' %>
       </div>
       <div class="col-4">
         <%= image_tag '/images/GuidanceGreaseup2.png', alt: 'GuidanceGreaseup2', class: 'img-fluid' %>
       </div>
       <div class="col-4">
         <%= image_tag '/images/GuidanceGreaseup3.png', alt: 'GuidanceGreaseup3', class: 'img-fluid' %>
       </div>
        
       
   </div>

     <%= form_with(model: @greaseup, local:true, multipart: true, 
     
         id:'tire', class: "form-horizontal") do |f|  %>
    
        <%= render 'layouts/error_messages', model: f.object %>
    
      <%= f.hidden_field :driver_id, value: @current_driver.id %>
      <div class="col-4 form-group">

          <%= f.fields_for :checkimages do |q| %>
            <% if q.object.image.present? %>
              <%= image_tag q.object.image.url(:thumb) %>
              <%= q.hidden_field :image_cache %>
            <% else %>
                <%= q.file_field :image, accept:'image/*', capture:'environment' %>
            <% end %>
          <% end %>
      </div>
      
      <div class="form-group row">
          <%= f.submit "Send Photo", class:"btn btn-xs btn-danger" %>
      </div>
    <% end %>