<h3>Meter Check</h3>
<div class="row">
    <div class="offset-md-2 col-md-4">
        <%= image_tag '/images/GuidanceMeter1.png', alt: 'GuidanceMeter1', class: 'img-fluid' %>
        <%#= image_tag 'images/GuidanceMeter1.png', class="img-fluid" %>
    </div>
</div>
   <%= form_with(model: @meter, local:true, multipart: true) do |f|  %>
    
    
      <%= f.hidden_field :driver_id, value: @current_driver.id %>
      <%= f.fields_for :checkimages do |q| %>
          <%= q.file_field :image, accept:'image/*', capture:'environment' %>
          
          
            <!--<input type="file" name="image" accept="video/*" capture="environment">-->

          
          
      <% end %>
      
      <div class="form-group row">
          
          <%= f.submit thai_trans("Send Photo"), class:"btn btn-xs btn-danger" %>
      </div>
    <% end %>